<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th></th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @task.start %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @task.end %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @task.all_day ? "○" : "" %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.memo %></td>
    </tr>
</table>

<ul>
    <li><%= link_to "スケジュール一覧に戻る", root_path %></li>
    <li><%= link_to "スケジュールを編集する", [:edit, @task]%></li>
    <li><%= link_to "スケジュールを削除する", @task, method: :delete, data: { confirm: "本当に削除しますか"} %></li>
</ul>
