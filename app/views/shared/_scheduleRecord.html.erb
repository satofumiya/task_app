<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/error", obj: @task %>

<%= form_with model:@task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.date_field :start %></td>
        </tr>
        <tr>
            <th><%= f.label :end ,"終了日" %></th>
            <td><%= f.date_field :end %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td><%= f.check_box :all_day %><br>終日の場合はチェックを入れます。</td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールを登録する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", root_path %></li>
        </ul>
    </div>
<% end %>
